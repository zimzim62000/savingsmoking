{% extends '::base.html.twig' %}

{% block menutop %}
    <div class="menutop" id="menutop">
        <div class="row">
            <div class="small-12 large-12 columns text-center">
                <p class="p-padding">
                    <a href="#">{{ 'layout.app.app.menutop.top'|trans }}</a>
                </p>
            </div>
        </div>
    </div>
{% endblock menutop %}


{% block menu %}
    <ul class="no-bullet">
        {% block menuli %}
        <li>
            <a href="{{ path('zz_bundles_app_homepage') }}">
                {{ 'layout.app.app.menu.index'|trans }}
            </a>
        </li>
        {% if is_granted('ROLE_USER') %}
            <li>
                <a href="{{ path('fos_user_profile_show') }}">
                    {{ 'layout.app.app.index.account'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.app.user.profile.logout'|trans }}
                </a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('hwi_oauth_connect') }}">
                    {{ 'layout.app.app.menu.login'|trans }}
                </a>
            </li>
        {% endif %}
        {% endblock menuli %}
    </ul>
{% endblock menu %}

{% block footer %}

    <footer class="row">
        <div class="small-12 large-12 columns text-right">
            <p class="p-padding">
                {{ 'layout.app.app.footer.credit'|trans }}
            </p>
        </div>
    </footer>

{% endblock footer %}