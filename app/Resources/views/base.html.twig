<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% if app.environment == 'prod' %}
                <link rel="stylesheet" href="{{ asset('built/css/min.css') }}"" />
            {% else %}
                {% stylesheets 'app/css/css.css' 'app/css/app.css' filter='cssrewrite' %}
                    <link rel="stylesheet" href="{{ asset_url }}" />
                {% endstylesheets %}
            {% endif %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% if app.environment == 'prod' %}
                <script type="text/javascript" src="{{ asset('built/js/min.js') }}"></script>
            {% else %}
                {% javascripts 'app/js/jquery.min.js' 'app/js/hammer.jquery.js'  'app/js/transform2d.jquery.js' 'app/js/modernizr.js' 'app/js/app.js' %}
                    <script type="text/javascript" src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% endif %}
        {% endblock %}
    </body>
</html>
